<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="50dp">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorTheme"/>

    <com.thc.www.p2p.widget.HomeLeftHeaderView
        android:id="@+id/hlhv_user_header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/view_top">

        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_home_left_user_header"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"/>


    </com.thc.www.p2p.widget.HomeLeftHeaderView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="哈哈哈"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hlhv_user_header"/>

    <TextView
        android:id="@+id/tv_user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv 1"
        android:textColor="@color/colorTheme"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

    <ImageView
        android:id="@+id/iv_user_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/qrcode_gray"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_level"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_user_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:drawablePadding="@dimen/margin_small"
        android:drawableStart="@mipmap/setting_gray"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:text="@string/user_setting"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tv_user_level"/>
</android.support.constraint.ConstraintLayout>
