<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android_21.share.FirstActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btn_sliding"
        style="@style/BtnStyle"
        android:text="SlidingPaneLayout"/>

    <Button
        android:id="@+id/btn_behavior"
        style="@style/BtnStyle"
        android:text="Behavior"
        app:layout_constraintTop_toBottomOf="@id/btn_sliding"/>

    <Button
        android:id="@+id/btn_bottom_sheet"
        style="@style/BtnStyle"
        android:text="Bottom Sheet"
        app:layout_constraintTop_toBottomOf="@id/btn_behavior"/>

    <Button
        android:id="@+id/btn_recycler_view"
        style="@style/BtnStyle"
        android:text="Recycler View"
        app:layout_constraintTop_toBottomOf="@id/btn_bottom_sheet"/>

</android.support.constraint.ConstraintLayout>
