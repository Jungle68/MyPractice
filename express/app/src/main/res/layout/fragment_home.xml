<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <!--content 主体-->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/themeColor"
                android:fitsSystemWindows="true"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ico_main_me"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@mipmap/ico_main_site"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/user"
                    app:layout_constraintStart_toEndOf="@id/user"
                    app:layout_constraintTop_toTopOf="@id/user"
                    tools:text="成都"/>

                <ImageButton
                    android:id="@+id/grab_list"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:background="@null"
                    android:contentDescription="@string/grab_list"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ico_main_order"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@id/user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/user"/>

                <ImageButton
                    android:id="@+id/task_list"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:background="@null"
                    android:contentDescription="@string/task_list"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ico_main_indent"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@id/user"
                    app:layout_constraintEnd_toStartOf="@+id/grab_list"
                    app:layout_constraintTop_toTopOf="@id/user"/>


                <TextView
                    android:id="@+id/all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/all"
                    android:textColor="@color/home_title_selector"
                    app:layout_constraintEnd_toStartOf="@+id/fl_my_task"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user"/>

                <FrameLayout
                    android:id="@+id/fl_my_task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/all"
                    app:layout_constraintEnd_toStartOf="@id/can_grab_list"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/all"
                    app:layout_constraintTop_toTopOf="@id/all">

                    <TextView
                        android:id="@+id/my_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@mipmap/ico_main_task"
                        android:drawablePadding="7dp"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="@string/my_task"
                        android:textColor="@color/home_title_selector"
                        />
                </FrameLayout>

                <TextView
                    android:id="@+id/can_grab_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_small"
                    android:text="@string/can_grab_task"
                    android:textColor="@color/home_title_selector"
                    app:layout_constraintBottom_toBottomOf="@id/all"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/fl_my_task"
                    app:layout_constraintTop_toTopOf="@id/all"/>

            </android.support.constraint.ConstraintLayout>

            <com.baidu.mapapi.map.TextureMapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                tools:visibility="gone"/>

            <!--跑马灯-->
            <LinearLayout
                android:id="@+id/ll_marquee"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#b23a503f"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/header"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:src="@mipmap/ico_main_hint"/>

                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/marquee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_weight="1"
                    app:mvAnimDuration="1000"
                    app:mvDirection="bottom_to_top"
                    app:mvInterval="3000"
                    app:mvSingleLine="true"
                    app:mvTextColor="@android:color/white"
                    app:mvTextSize="14sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/map_refresh"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@drawable/white_circle"
                android:elevation="@dimen/dimen_5dp"
                android:scaleType="center"
                android:src="@mipmap/ico_main_flush"
                app:backgroundTint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="false"
            app:headerLayout="@layout/home_menu_header"
            app:itemTextAppearance="@style/HomeMenuStyle"
            app:menu="@menu/home_menu"/>
    </android.support.v4.widget.DrawerLayout>
</layout>
