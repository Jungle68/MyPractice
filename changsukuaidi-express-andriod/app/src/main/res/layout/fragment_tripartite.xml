<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/express_brand_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/express_brand"
                android:textColor="@color/common_text"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/express_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/express_brand_label"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_toEndOf="@id/express_brand_label"
                android:background="@drawable/hint_round_rect_bg"
                android:drawableEnd="@mipmap/icon_more"
                android:hint="@string/select_express_brand"
                android:paddingBottom="8dp"
                android:paddingEnd="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="8dp"
                android:textColorHint="@color/text_hint"/>

            <TextView
                android:id="@+id/express_num_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/express_brand_label"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="30dp"
                android:text="@string/express_num"
                android:textColor="@color/common_text"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/express_brand_label"/>

            <TextView
                android:id="@+id/express_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/express_num_label"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_toEndOf="@id/express_num_label"
                android:background="@drawable/hint_round_rect_bg"
                android:paddingBottom="8dp"
                android:paddingEnd="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small"
                android:paddingTop="8dp"
                android:text="@string/select_express_num"
                android:textColor="@color/text_hint"/>

            <View
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:layout_below="@id/express_num"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/space_color"/>

            <TextView
                android:id="@+id/tripartite_dispatch_note_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/space"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/tripartite_dispatch_note"
                android:textColor="@color/common_text"
                android:textSize="15sp"/>

            <com.changsukuaidi.www.widget.edittext.DeleteEditText
                android:id="@+id/tripartite_dispatch_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tripartite_dispatch_note_label"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/hint_round_rect_bg"
                android:gravity="start|top"
                android:maxLength="50"
                android:minLines="5"
                android:padding="5dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/note_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tripartite_dispatch_note"
                android:layout_alignEnd="@id/tripartite_dispatch_note"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="15dp"
                android:includeFontPadding="false"
                android:text="@string/note_limit"
                android:textColor="@color/text_hint"
                android:textSize="15sp"/>

            <View
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_10dp"
                android:layout_below="@id/tripartite_dispatch_note"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@color/space_color"/>

            <TextView
                android:id="@+id/post_order_certificate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/space2"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/post_order_certificate"
                android:textColor="@color/common_text"
                android:textSize="15sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/post_order_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_order_certificate_label"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"/>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
