<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pickup_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:paddingEnd="@dimen/dimen_30dp"
                android:paddingStart="@dimen/dimen_30dp"
                android:paddingTop="@dimen/dimen_5dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_add_express_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:drawablePadding="@dimen/dimen_5dp"
                android:drawableStart="@mipmap/ico_add_center"
                android:text="@string/add_express_code"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_pickup_manual"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_express_code"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>
