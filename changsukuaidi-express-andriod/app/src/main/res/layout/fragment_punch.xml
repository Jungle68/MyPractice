<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:includeFontPadding="false"
            android:textColor="@color/common_text"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/head"
            app:layout_constraintTop_toTopOf="@id/head"
            tools:text="name"
            tools:textAllCaps="true"/>

        <TextView
            android:id="@+id/job_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:textColor="@color/common_text_grey_9"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/head"
            app:layout_constraintStart_toEndOf="@id/head"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintVertical_weight="1"
            tools:text="job type"
            tools:textAllCaps="true"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:textColor="@color/common_text_grey_9"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/head"
            tools:text="2017.12.09"/>

        <View
            android:id="@+id/divider_top"
            style="@style/DividerStyle"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/head"/>

        <ImageView
            android:id="@+id/car_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:src="@mipmap/icon_truck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_top"/>

        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="-----------"
            android:textColor="@color/common_text"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/car_icon"
            app:layout_constraintTop_toBottomOf="@id/divider_top"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/car_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="---      ---"
            android:textColor="@color/common_text_grey_9"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/car_icon"
            app:layout_constraintStart_toEndOf="@id/car_icon"
            app:layout_constraintTop_toBottomOf="@id/car_name"
            tools:ignore="HardcodedText"/>

        <View
            android:id="@+id/divider_car"
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_icon"/>


        <TextView
            android:id="@+id/punch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="25dp"
            android:text="@string/punch_card_time_and_loc"
            android:textColor="@color/common_text_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_car"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/start_work_punch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="25dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/punch_label">

            <TextView
                android:id="@+id/tv_start_work_punch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/theme_circle_shape"
                android:gravity="center_vertical"
                android:text="@string/punch_card_time"
                android:textColor="@color/common_text_grey_9"
                android:textSize="13sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_start_work_punch_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:drawablePadding="7dp"
                android:drawableStart="@mipmap/icon_register_site"
                android:maxLines="2"
                android:text="@string/get_location_info"
                android:textColor="@color/common_text_grey_9"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_start_work_punch_time"/>

            <ProgressBar
                android:id="@+id/start_location_progress"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_work_punch_address"
                app:layout_constraintStart_toEndOf="@id/tv_start_work_punch_address"
                app:layout_constraintTop_toTopOf="@id/tv_start_work_punch_address"/>

            <LinearLayout
                android:id="@+id/ll_start_work_punch"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/theme_circle_shape_inset"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_start_work_punch_address">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:paddingBottom="3dp"
                    android:text="@string/punch_card"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_punch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:paddingTop="3dp"
                    android:textColor="#bbefca"
                    android:textSize="12sp"
                    tools:text="08:30:30"/>
            </LinearLayout>

            <Button
                android:id="@+id/perform_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/themeColor"
                android:minHeight="40dp"
                android:text="@string/view_tasks"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tv_start_work_punch_address"/>
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/off_work_punch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="25dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/punch_label">

            <TextView
                android:id="@+id/tv_start_work_punch_time_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical"
                android:text="@string/punch_card_time"
                android:textColor="@color/common_text"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_circle_shape"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_work_punch_time_old"
                app:layout_constraintTop_toTopOf="@id/tv_start_work_punch_time_old"/>

            <TextView
                android:id="@+id/tv_start_work_punch_address_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:drawablePadding="7dp"
                android:drawableStart="@mipmap/icon_register_site"
                android:maxLines="2"
                android:text="@string/get_location_info"
                android:textColor="@color/common_text_grey_9"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_start_work_punch_time_old"/>

            <TextView
                android:id="@+id/tv_off_work_punch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/theme_circle_shape"
                android:gravity="center_vertical"
                android:text="@string/off_work_punch_time"
                android:textColor="@color/common_text_grey_9"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/tv_start_work_punch_address_old"/>

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_circle_shape"
                app:layout_constraintBottom_toBottomOf="@id/tv_off_work_punch_time"
                app:layout_constraintTop_toTopOf="@id/tv_off_work_punch_time"/>

            <TextView
                android:id="@+id/tv_off_work_punch_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:drawablePadding="7dp"
                android:drawableStart="@mipmap/icon_register_site"
                android:maxLines="2"
                android:text="@string/get_location_info"
                android:textColor="@color/common_text_grey_9"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_off_work_punch_time"/>

            <ProgressBar
                android:id="@+id/off_location_progress"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_off_work_punch_address"
                app:layout_constraintStart_toEndOf="@id/tv_off_work_punch_address"
                app:layout_constraintTop_toTopOf="@id/tv_off_work_punch_address"/>

            <com.changsukuaidi.www.widget.DashDivider
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_off_work_punch_time"
                app:layout_constraintBottom_toTopOf="@id/iv_two"
                app:layout_constraintEnd_toEndOf="@id/iv_one"
                app:layout_constraintStart_toStartOf="@id/iv_one"
                app:layout_constraintTop_toBottomOf="@id/iv_one"/>

            <LinearLayout
                android:id="@+id/ll_off_work_punch"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/theme_circle_shape_inset"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_off_work_punch_address">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:paddingBottom="3dp"
                    android:text="@string/off_punch"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_off_punch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:paddingTop="3dp"
                    android:textColor="#bbefca"
                    android:textSize="12sp"
                    tools:text="08:30:30"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
